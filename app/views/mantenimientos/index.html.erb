<style>
  .thumbnail {
    width: 50px;
    height: 50px;
  }

  .table-container {
    max-height: 300px;
    overflow-y: auto;
  }

  /* Estilo dark para la tabla */
  .table-dark {
    background-color: #343a40; /* Cambia este color según tu preferencia */
    color: #fff; /* Color de texto en la tabla */
  }
</style>

<p style="color: green"><%= notice %></p>

<h1>Mantenimientos</h1>

<div class="card glass text-white">
  <div class="card-body">
    <div class="table-container scrollable-card">
      <table class="table table-bordered table-responsive table-dark">
        <thead>
          <tr>
            <th>Tipo de Motor</th>
            <th>Tipo de Mantenimiento</th>
            <th>Ciudad</th>
            <th>Materiales</th>
            <th>Fecha de Mantenimiento</th>
            <th>Técnico Email</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @mantenimientos.each do |mantenimiento| %>
            <tr>
              <td><%= mantenimiento.tipo_motor %></td>
              <td><%= mantenimiento.tipo_mantenimiento %></td>
              <td><%= mantenimiento.ciudad %></td>
              <td><%= mantenimiento.materiales %></td>
              <td><%= mantenimiento.fecha_mantenimiento.strftime("%Y-%m-%d") %></td>
              <td><%= mantenimiento.tecnico_email %></td>
              <td class="d-flex justify-content-center">
                <%= link_to "<i class='fas fa-eye'></i>".html_safe, mantenimiento, class: "btn btn-primary mx-1", title: "Ver" %>
                <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_mantenimiento_path(mantenimiento), class: "btn btn-secondary mx-1", title: "Editar" %>
                <%= link_to "<i class='fas fa-trash'></i>".html_safe, mantenimiento, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger mx-1", title: "Eliminar" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to "Nuevo mantenimiento", new_mantenimiento_path, class: "btn btn-success" %>
